<% content_for :tools do %>

  <a href="" class="btn btn-primary pull-left"><i class="fa fa-plus"></i> New Hotel</a>

  <form class="form-inline" role="form" id="js-filter-form">
    <select class="form-control">
      <option value="" selected>-- select --</option>
      <% @hotelCategories.each do |cats| %>
        <option value="<%= cats.hotel_type %>"><%= cats.hotel_type %></option>
      <% end %>
    </select>
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search Hotels">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
      </span>
    </div>
  </form>

<% end %>

<% content_for :main do %>

  <% @hotels.each do |h| %>

    <div class=" col-lg-3 col-md-3" data-filter="<%= h.hotel_name %> <%= h.hotel_type %>">
      <div class="hotel">
        <div class="hotel-img">
          <img src="<%= h.hotel_image_url %>" alt="...">
        </div>
        <div class="hotel-details">
          <strong><%= h.hotel_name %></strong>
          <p><% address = h.hotel_street %></p>
          <p><%=  %></p>
        </div>
        <div class="hotel-tools btn-group">
          <a href="#" class="btn btn-lg btn-default" role="button"><i class="fa fa-trash-o"></i></a>
          <a href="#" class="btn btn-lg btn-default" role="button"><i class="fa fa-edit"></i></a>
          <a href="#" class="btn btn-lg btn-default" role="button"><i class="fa fa-map-marker"></i></a>
          <a href="#" class="btn btn-lg btn-default" role="button"><i class="fa fa-plus"></i></a>
        </div>
      </div>
    </div>

    

  <% end %>

<% end %>
